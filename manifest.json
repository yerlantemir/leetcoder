{
    "manifest_version": 2,
    "name": "leetcoder",
    "version": "1.0.3",
    "background": {
        "scripts": ["./src/background.js"
                    ],
        "persistent": false 
    },
    "content_scripts":[
        {   
            "matches": [
                "https://leetcode.com/problemset/*"
            ],
            "js": [
                "./src/content.js"
            ],
            "styles":[
                "./src/style.css"
            ]
        }
    ],
    "permissions":[
        "tabs",
        "storage"
    ],
    "icons": {
        "16": "./assets/defaultIcon.png"
    },
    "browser_action": {
        "default_popup": "./src/popup.html",
        "default_title": "leetcoder"
    }
}
